@model Pixel.FixaBarnkalaset.Web.Models.InvitationCardsModels.WhichViewModel

@section MetaData
    {
    <meta name="robots" content="noindex">
}

<div class="ui main container pxl-public-page pxl-public-page--invitation-cards-which">
    <h1 class="ui medium header">Gäster</h1>
    
    <div class="ui relaxed list">
        @foreach (var invitation in Model.Invitations)
        {
            <div class="item">
                <div class="right floated content">
                    <a data-remove-invitation-button data-invitation-id="@invitation.Id"><i class="large remove icon"></i></a>
                </div>
                <div class="content">
                    <div class="header">@invitation.FullName</div>
                    <div class="description">@invitation.FullAddress</div>
                </div>
            </div>
        }
    </div>

