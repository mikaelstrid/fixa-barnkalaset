@using Microsoft.AspNetCore.Identity
@using Pixel.FixaBarnkalaset.Infrastructure.Identity
@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!doctype html>
<html lang="sv">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @if (Configuration["Environment"] == "TEST")
    {
        <meta name="robots" content="noindex">
    }
    <title>@ViewData["Title"]</title>
    <meta name="description" content="@ViewData["Description"]" />

    <partial name="_OgTags" />
    <partial name="_Favicons" />

    <link href="https://fonts.googleapis.com/css?family=Gochi+Hand|Lato" rel="stylesheet">

    <script src="https://code.jquery.com/jquery-3.1.1.min.js"
            integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="
            crossorigin="anonymous"></script>

    @if (!SignInManager.IsSignedIn(User))
    {
        <partial name="_GoogleAnalytics" />
        <partial name="_FacebookAnalytics" />
    }
<link href="/dist/main.css" rel="stylesheet"></head>
<body>
    <!-- Page Contents -->
    <div class="pusher">
        @*<div class="ui center aligned attached basic segment pxl-cookie-info" style="display: none;">
            Cookies hjälper oss att leverera våra tjänster. Genom att använda tjänsterna, accepterar du att vi använder cookies. @Html.ActionLink("Läs mer", "Cookies", "Home")&nbsp;&nbsp;&nbsp;<a class="ui mini button close">OK</a>
        </div>*@
        <div class="pxl-hero">
            <div class="container">
                <nav class="navbar navbar-dark bg-transparent">
                    @Html.ActionLink("Fixa barnkalaset", "Index", "Home", null, new { @class = "navbar-brand" })

                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            @Html.ActionLink("Blogg", "Index", "BlogPosts", null, new { @class = "nav-link active" })
                        </li>
                    </ul>
                </nav>
                @RenderSection("Hero", false)
            </div>
        </div>

        @RenderBody()

        <div class="container">
            <footer class="text-center py-4 py-md-5">
                Fixa barnkalaset av <a href="http://www.pixeldigitalbyra.se">Pixel Digitalbyrå</a>.<br />
                <a href="mailto:info@fixabarnkalaset.se">info@fixabarnkalaset.se</a><br />
                Med reservation för inaktuella och/eller felaktiga uppgifter.
            </footer>
        </div>
    </div>

        @RenderSection("Scripts", required: false)

        <script>
            if (document.cookie.indexOf("pxlca") === -1) {
                $(".pxl-cookie-info").show();

                $(".pxl-cookie-info .close")
                    .on("click",
                        function () {
                            $(this)
                                .closest(".pxl-cookie-info")
                                .transition("fade");
                            var d = new Date();
                            d.setFullYear(d.getFullYear() + 1);
                            document.cookie = "pxlca=1;expires=" + d.toUTCString();
                        });
            }
        </script>
<script type="text/javascript" src="/dist/runtime.js"></script><script type="text/javascript" src="/dist/main.js"></script></body>
</html>
