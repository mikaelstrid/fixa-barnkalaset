@model Pixel.Kidsparties.Core.Arrangement

@section Header
{
    <script src="//cdn.ckeditor.com/4.6.2/basic/ckeditor.js"></script>
    <style>
        #map {
            height: 350px;
        }
    </style>
}

<div class="ui main container text">

    <h1>Skapa arrangemang</h1>

    <form class="ui form" asp-action="Create">

        @Html.Partial("_CreateOrEdit", Model)

        <button class="ui secondary button" type="submit">Spara</button>
    </form>
</div>

@section Scripts {
    <script src="~/js/utilities/slugify.js"></script>
    <script src="~/js/admin-pages/createOrEditArrangementPage.js"></script>
    <script>
        var page = new CreateOrEditArrangementPage();
        page.initPage();
    </script>
    <script async defer
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBLKgpfR9yUKR-Fwwb7yBGDoFVgRzFIxZ4&callback=page.initMap">
    </script>
}
