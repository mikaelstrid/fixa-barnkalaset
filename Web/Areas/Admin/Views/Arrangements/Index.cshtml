@model IEnumerable<Pixel.Kidsparties.Core.Arrangement>

<div class="layout--column">
    <h1 class="mdl-typography--display-2">Arrangemang</h1>

    @foreach (var arrangement in Model)
    {
        <div class="mdl-card mdl-shadow--2dp card-arrangement">
            <div class="mdl-card__title mdl-card--expand" style="background: linear-gradient(to bottom, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.4) 80%), url('@arrangement.CoverImage'); background-size: cover;">
                <h2 class="mdl-card__title-text">@arrangement.Name</h2>
            </div>
            <div class="mdl-card__supporting-text">
                @Html.DisplayFor(m => arrangement.Pitch)
            </div>
            <div class="mdl-card__actions mdl-card--border">
                <a class="mdl-button mdl-button--accent mdl-js-button mdl-js-ripple-effect" href="@(Context.Request.Path + "/" + arrangement.Slug)">
                    Läs mer
                </a>
            </div>
        </div>
    }
</div>
