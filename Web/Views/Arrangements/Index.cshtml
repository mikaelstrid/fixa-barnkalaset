@model Pixel.Kidsparties.Web.Controllers.ArrangementIndexViewModel

<div class="layout--column">
    <h1 class="mdl-typography--display-2">@Html.DisplayFor(m => m.CityName)</h1>

    @foreach (var arrangement in Model.Arrangements)
    {
        <div class="mdl-card mdl-shadow--2dp card-arrangement">
            <div class="mdl-card__title mdl-card--expand" style="background: linear-gradient(to bottom, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.4) 80%), url('@arrangement.CoverImage'); background-size: cover;">
                <h2 class="mdl-card__title-text">@arrangement.Name</h2>
        </div>
        <div class="mdl-card__supporting-text">
            @Html.DisplayFor(m => arrangement.Pitch)
        </div>
        <div class="mdl-card__actions mdl-card--border">
            <a class="mdl-button mdl-button--accent mdl-js-button mdl-js-ripple-effect" href="@Url.Action("Details", new { citySlug = Model.CitySlug, arrangementSlug = arrangement.Slug })">
                Läs mer
            </a>
        </div>
    </div>
    }
</div>