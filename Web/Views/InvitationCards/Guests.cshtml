    <div class="ui tiny error message hidden" id="removeErrorMessage">Det gick inte att ta bort gästen, försök igen.</div>

    <button class="ui positive labeled icon button" id="addGuestButton"><i class="plus icon"></i>Lägg till</button>

    <a href="@Url.Action("Rsvp", null, new { partyId = Model.Id })" class="ui button right floated">Fortsätt</a>


    <div class="ui tiny modal" data-party-id="@Model.Id">
        <i class="close icon"></i>
        <div class="header">
            Lägg till gäst
        </div>
        <div class="content">
            <div class="ui tiny error message hidden">Det gick inte att lägga till gästen, försök igen.</div>
            <form class="ui form unstackable">
                <div class="field">
                    <div class="two fields">
                        <div class="field">
                            <label>Förnamn</label>
                            <input type="text" name="FirstName" value="Kalle">
                        </div>
                        <div class="field">
                            <label>Efternamn</label>
                            <input type="text" name="LastName" value="Karlsson">
                        </div>
                    </div>
                </div>
                <div class="field">
                    <label>Gatuadress</label>
                    <input type="text" name="StreetAddress" value="Korsvägen 11">
                </div>
                <div class="field">
                    <div class="fields">
                        <div class="four wide field">
                            <label>Postnummer</label>
                            <input type="text" name="PostalCode" value="302 56">
                        </div>
                        <div class="eight wide field">
                            <label>Postort</label>
                            <input type="text" name="PostalCity" value="Halmstad">
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="actions">
            <div class="ui cancel button">
                Avbryt
            </div>

            <div class="ui positive right labeled icon button">
                Lägg till
