@model IEnumerable<Pixel.Kidsparties.Core.Arrangement>

<h1>Arrangemang</h1>
<table class="ui table">
    <thead>
        <tr>
            <th>Namn</th>
            <th>Stad</th>
            <th>Pitch</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var arrangement in Model)
            {
            <tr>
                <td>@arrangement.Name</td>
                <td>@arrangement.CategoryCity</td>
                <td>@arrangement.Pitch</td>
                <td><a href="@Url.Action("Details", new {id = arrangement.Id})">Ändra</a></td>
            </tr>
        }
    </tbody>
</table>

